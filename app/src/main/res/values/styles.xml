<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="appSmallFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appMediumFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appMediumFontBlack" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appMediumFontStandard" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appLargeFont" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appLargeFontBlack" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hintTextCustom" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/blue_light</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>
    style=

    <style name="buttonStandard" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="android:textColor">@color/black</item>-->
        <!--<item name="android:background">@color/blue</item>-->
        <!--<item name="android:colorButtonNormal">@color/blue_light</item>-->
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/green</item>
    </style>

</resources>
